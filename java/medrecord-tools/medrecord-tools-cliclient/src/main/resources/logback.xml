<!-- this file is used during testing and referenced by the gradle build script -->
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %.-5level %class %msg %ex{7}%n</pattern>
    </encoder>
  </appender>

  <!-- reduce logging of things which are too noisy on debug level -->
  <logger name="org.apache.tomcat" level="INFO"/>
  <logger name="org.apache.catalina" level="INFO"/>
  <logger name="org.springframework" level="ERROR"/>
  <logger name="org.apache.http" level="INFO"/>
  <logger name="org.apache.http.impl.conn.Wire" level="INFO"/>
  <logger name="org.restlet" level="WARN"/>
  <!--<logger name="com.medvision360.medrecord.engine.ArchetypeLoader" level="INFO"/>-->
  <!--<logger name="com.medvision360.medrecord.engine" level="TRACE"/>-->

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>

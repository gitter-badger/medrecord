<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID"
         version="2.5"
         >
  
  <!-- medvision-server standard web-app stuff -->

  <display-name>@displayName@</display-name>

  <servlet>
    <servlet-name>@servletName@</servlet-name>
    <servlet-class>com.medvision360.lib.server.RestletServlet</servlet-class>

    <!-- tell restlet which application to start -->
    <init-param>
      <param-name>org.restlet.application</param-name>
      <param-value>@applicationClass@</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- disabled for now

  <servlet>
     <servlet-name>EventSocketServlet</servlet-name>
     <servlet-class>
        com.medvision360.wslog.EventSocketServlet
     </servlet-class>
     <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
     <servlet-name>LogSocketServlet</servlet-name>
     <servlet-class>
        com.medvision360.wslog.LogSocketServlet
     </servlet-class>
     <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
     <servlet-name>EventSocketServlet</servlet-name>
     <url-pattern>/wslog/events</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
     <servlet-name>LogSocketServlet</servlet-name>
     <url-pattern>/wslog/logs</url-pattern>
  </servlet-mapping>

  -->

  <servlet-mapping>
    <servlet-name>@servletName@</servlet-name>
    <url-pattern>/v2/*</url-pattern>
  </servlet-mapping>

  <!-- end medvision-server standard web-app stuff -->
  
  <!-- middleware web-app stuff -->
  
  <filter>
    <description>Filter for cross domain requests</description>
    <filter-name>CORSFilter</filter-name>
    <filter-class>com.zorggemak.filters.CORSFilter</filter-class>
  </filter>

  <filter>
    <description>Add a vary header</description>
    <filter-name>VaryFilter</filter-name>
    <filter-class>com.zorggemak.filters.VaryFilter</filter-class>
  </filter>

  <filter>
    <description>Translate DELETE and PUT into POST</description>
    <filter-name>SpringMethodFilter</filter-name>
    <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>CORSFilter</filter-name>
    <url-pattern>/v1/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>VaryFilter</filter-name>
    <url-pattern>/v1/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SpringMethodFilter</filter-name>
    <url-pattern>/v1/*</url-pattern>
  </filter-mapping>

  <listener>
    <description>ServletContextListener</description>
    <listener-class>com.zorggemak.servlet.ServletListener</listener-class>
  </listener>

  <listener>
    <description>LoggingConfigurer</description>
    <listener-class>com.medvision360.medrecord.server.LoggingConfigurationListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>

  <!-- end middleware web-app stuff -->
</web-app>
